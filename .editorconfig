root = true

[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
indent_style = space

[*.py]
# Make sure this matches `tool.isort` in pyproject.toml
ensure_newline_before_comments = true
force_grid_wrap = 0
include_trailing_comma = true
indent_size = 4
indent_style = space
line_length = 88
multi_line_output = 3
use_parentheses = true


[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off
